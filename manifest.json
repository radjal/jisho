{
  "manifest_version": 3,
  "name": "Jisho Inline + Tab Lookup",
  "version": "1.2",
  "description": "Inline and tab-based Japanese word lookup using Jisho.org",
  "permissions": ["contextMenus", "scripting", "activeTab", "tabs"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ],
  "host_permissions": [
    "https://jisho.org/*"
  ],
   "icons": {
    "16": "icon16.png",
    "32": "icon32.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
